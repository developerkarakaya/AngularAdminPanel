
@{
    ViewBag.Title = "Rol";
    Layout = "~/Views/Shared_/_AdminLayout.cshtml";
}

<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-2.0.1.js"></script>
<script src="~/js/login.js?v=@DateTime.Now.ToString("ddMMyyyyHHmmss")"></script>

<style>
    .item {
        margin-bottom: 20px;
    }
</style>
<h2>Kullanıcı Rol İşlemleri Sayfası</h2>
<br />
<input type="hidden" name="PageName" id="PageName" value="Rol" />
<div class="panel panel-white" ng-controller="loginController" ng-app="sirketAdmin">
    <div class="panel-heading clearfix">
    </div>
    <div class="panel-body">
        <div role="tabpanel">
            <div class="tab-content">
                <form class="postform" id="form">
                    <div class="item">
                        <input type="hidden" name="RolId" id="RolId" value="{{RolId}}" />
                        <label>Kullanıcı Rol</label>
                        <input type="text" placeholder="Kullanıcı Rol Giriniz.." name="RolName" id="RolName" value="{{RolName}}" class="form-control" />
                    </div>
                    <div class="item">
                        <input type="submit" class="btn btn-success" style="float:right" ng-click="kullaniciRolEkle(RolId)" value="Kaydet" />
                    </div>
                </form>
            </div>
            <br />
            <hr />
            <br />
            <br />
            <div class="panel panel-white">
                <div class="panel-body">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Sıra</th>
                                <th>Rol Adı</th>
                                <th>
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in rollistesi">
                                <td>{{$index +1}}</td>
                                <td>{{item.RolName}}</td>
                                <td>
                                    <input type="button" value="Sil" class="btn btn-danger" ng-click="rolSil(item.RolId)"  />
                                    <input type="button" value="Düzenle" class="btn btn-success" ng-click="rolDuzenle(item.RolId)"  />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

