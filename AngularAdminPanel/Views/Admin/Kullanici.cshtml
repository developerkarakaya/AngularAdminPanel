
@{
    ViewBag.Title = "Kullanici";
    Layout = "~/Views/Shared_/_AdminLayout.cshtml";
}
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-2.0.1.js"></script>
<script src="~/js/login.js?v=@DateTime.Now.ToString("ddMMyyyyHHmmss")"></script>
<style>
    .item {
        margin-bottom: 20px;
    }
</style>
<h2>Kullanıcı İşlemleri Sayfası</h2>
<br />
<input type="hidden" name="PageName" id="PageName" value="Kullanici" />

<div class="panel panel-white" ng-controller="loginController" ng-app="sirketAdmin">
    <div class="panel-heading clearfix">
    </div>
    <div class="panel-body">
        <div role="tabpanel">
            <hr />

            <br />
            <br />
            <div class="panel panel-white">
                <div class="panel-body">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı Sıra</th>
                                <th>Kullanıcı Adı</th>
                                <th>Kullanıcı Email</th>
                                <th>Kullanıcı Şifre</th>
                                <th>Kullanıcı Rol</th>
                                <th>
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in kullaniciListe">
                                <th>{{$index + 1}}</th>
                                <td>{{item.UserName}}</td>
                                <td>{{item.UserEmail}}</td>
                                <td>{{item.UserPasswordText}}</td>
                                <td>{{item.UserRolId}}</td>
                                <td>
                                    <input type="button" value="Sil" class="btn btn-danger" ng-click="kullaniciSil(item.UserId)" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
